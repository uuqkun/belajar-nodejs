{
  "name": "unit-test",
  "version": "1.0.0",
  "description": "Belajar Nodejs Unit test",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverage": true,
    "collectThreshold": {
      "global": {
        "branches": 100,
        "functions": 100, 
        "lines": 100,
        "statements": 100
      }
    }, 
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "author": "Achmad Furqon Rachmadie",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.23.8",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0"
  }
}
